						<Name>Số điện thoại người gửi</Name>
						<RequirementSentences>NONE</RequirementSentences>
						<IsRequired>false</IsRequired>
					</Parameter>
					<Parameter>
						<Key>CONTENT</Key>
						<Name>Nội dung tin nhắn</Name>
						<RequirementSentences>NONE</RequirementSentences>
						<IsRequired>false</IsRequired>
					</Parameter>
